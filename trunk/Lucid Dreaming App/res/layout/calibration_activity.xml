<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
        style="@android:style/ButtonBar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

  <Button
            android:id="@+id/quickCalibration"
            android:onClick="quickCalibration"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:enabled="true"
          android:text="@string/menu_start_quick_calibration" />

        <Button
            android:id="@+id/startButton"
            android:onClick="startCalibration"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:enabled="true"
            android:text="@string/menu_start_extended_calibration" />
           
             <Button
            android:id="@+id/cancelButton"
            android:onClick="cancelCalibration"

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:enabled="true"
            android:text="@string/menu_cancel_calibration" />
           
    </LinearLayout>
    
    		<WebView android:id="@+id/calibration_view"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            />
   

</LinearLayout>